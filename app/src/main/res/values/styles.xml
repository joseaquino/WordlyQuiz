<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Quiz question answered indicator style -->
    <style name="qAnsweredIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/not_answered_indicator</item>
    </style>

    <!-- Quiz question section style -->
    <style name="questionSectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/question_txt_bg</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Quiz question number -->
    <style name="quizQuestionNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@color/highlightYellow</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Quiz question card style -->
    <style name="questionCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/question_card</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Quiz question options container style -->
    <style name="questionOptionsContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Quiz checkbox style -->
    <style name="checkboxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Quiz RadioButton style -->
    <style name="radioButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

</resources>
